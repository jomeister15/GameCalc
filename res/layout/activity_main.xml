<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:text="Games Played" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:text="Games Played" />

    <EditText
        android:id="@+id/TBG"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:inputType="numberSigned" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/TAG"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/TBG"
        android:layout_alignBottom="@+id/TBG"
        android:layout_alignLeft="@+id/textView1"
        android:ems="10"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/TARA"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentTop="true"
        android:text="Home Team" />

    <EditText
        android:id="@+id/TARS"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/TAG"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TARS"
        android:layout_below="@+id/TAG"
        android:layout_marginTop="20dp"
        android:text="Runs" />

    <EditText
        android:id="@+id/TBRS"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/TARS"
        android:layout_alignBottom="@+id/TARS"
        android:layout_alignLeft="@+id/TBG"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TBRS"
        android:layout_alignLeft="@+id/TBRS"
        android:text="Runs" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/textView2"
        android:text="Away Team" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TARA"
        android:layout_below="@+id/TARA"
        android:layout_marginTop="75dp"
        android:text="Home team has a"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/result"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/result"
        android:layout_alignBottom="@+id/result"
        android:layout_toRightOf="@+id/textView7"
        android:text="%"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/result"
        android:layout_below="@+id/result"
        android:text="chance to win a single game between the two teams"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/TARS"
        android:text="Runs Allowed" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TBRS"
        android:layout_below="@+id/TBRS"
        android:text="Runs Allowed" />

    <EditText
        android:id="@+id/TBRA"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView9"
        android:layout_alignLeft="@+id/textView6"
        android:ems="10"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/domath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TBRA"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/textView10"
        android:text="Math!" />

</RelativeLayout>
